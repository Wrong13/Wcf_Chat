<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="BoxUserName" HorizontalAlignment="Left" Margin="374,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnConnect" Click="BtnConnect_Click" Content="Подключиться" HorizontalAlignment="Left" Margin="252,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbChat" Margin="252,69,384,252" KeyDown="lbChat_KeyDown"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Margin="272,372,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
